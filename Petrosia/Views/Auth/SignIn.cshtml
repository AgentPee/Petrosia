@model Petrosia.Models.Guest


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: url("../images/bg.jpg") no-repeat center center/cover;
            margin: 0;
        }

        .container {
            background: rgba(0, 0, 0, 0.7);
            padding: 50px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.7);
            width: 380px;
            text-align: center;
            height: auto;
        }

        h2 {
            font-size: 30px;
            color: white;
            margin: 0 0 35px 0;
            font-style: oblique;
            font-family: 'Poppins', sans-serif;
        }

        .input-container {
            position: relative;
            margin-bottom: 25px;
            display: flex;
            justify-content: center;
            margin-top: 10px;
            width: 100%;
        }

            .input-container input {
                width: 100%;
                padding: 10px 10px;
                border: 2px solid gray;
                border-radius: 5px;
                background: transparent;
                font-size: 16px;
                color: white;
                outline: none;
                transition: border-color 0.3s, padding-top 0.3s;
            }

            .input-container label {
                position: absolute;
                top: 50%;
                left: 12px;
                transform: translateY(-50%);
                font-size: small;
                color: white;
                background: transparent;
                padding: 0 5px;
                transition: all 0.3s ease-in-out;
                pointer-events: none;
            }

            /* Effect when user focuses or types */
            .input-container input:focus,
            .input-container input:not(:placeholder-shown) {
                border-color: #1E90FF;
                padding-top: 18px; /* Adjust padding to keep text aligned */
            }

                .input-container input:focus ~ label,
                .input-container input:not(:placeholder-shown) ~ label {
                    top: 0px;
                    left: 8px;
                    font-size: 12px;
                    color: #1E90FF;
                    background: black;
                    padding: 0 4px;
                }
                
                .link-signUp {
                    color: #1E90FF;
                    text-decoration: none;
                }

        .button-container {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        button {
            width: 100%;
            padding: 12px;
            background: #EFDCAB;
            color: black;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
            font-size: medium;
            font-family: 'Poppins', sans-serif;
        }

            button:hover {
                background-color: #404040;
                color: white;
            }

    </style>
</head>
<body>
    <div class="container">
        <h2>Sign In</h2>
        <form asp-action="SignIn" asp-controller="Auth" method="post">
            <div class="input-container">
                
                <input type="email" name="email" placeholder="enter email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-container">
               
                <input type="password" name="password" placeholder="enter password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="button-container">
                <button type="submit">Sign In</button>
            </div>
            <p style="color: white; margin-top: 15px; font-size: 14px;">
                Doesn't have an account? <a class="link-signUp" href="@Url.Action("SignUp", "Auth")">Sign Up</a>
            </p>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

    </div>
</body>
</html>
