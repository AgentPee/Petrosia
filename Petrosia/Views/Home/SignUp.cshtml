@model Petrosia.Models.Guest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: url('banner.jpg') no-repeat center center/cover;
            margin: 0;
        }

        .container {
            background: rgba(0, 0, 0, 0.7);
            padding: 50px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.7);
            width: 380px;
            text-align: center;
            height: auto;
        }

        h2 {
            font-size: 30px;
            color: white;
            margin: 0 0 35px 0;            
            font-style: oblique;
            font-family: 'poppins', sans-serif;
        }

        .input-container {
            position: relative;
            margin-bottom: 25px;
            display: flex;
        justify-content: center;
        margin-top: 10px;
            width: 100%;
        }

        .input-container input {
            width: 100%;
            padding: 10px 10px;
            border: 2px solid gray;
            border-radius: 5px;
            background: transparent;
            font-size: 16px;
            color: white;
            outline: none;
            transition: border-color 0.3s, padding-top 0.3s;
        }

        .input-container label {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            font-size: small;
            color: white;
            background: transparent;
            padding: 0 5px;
            transition: all 0.3s ease-in-out;
            pointer-events: none;
        }

        /* Effect when user focuses or types */
        .input-container input:focus,
        .input-container input:not(:placeholder-shown) {
            border-color: #1E90FF;
            padding-top: 18px; /* Adjust padding to keep text aligned */
        }

        .input-container input:focus ~ label,
        .input-container input:not(:placeholder-shown) ~ label {
            top: 0px;
            left: 8px;
            font-size: 12px;
            color: #1E90FF;
            background: black; /* Matches form background */
            padding: 0 4px;
        }

        /* This creates the "border break" effect */
        .input-container input:focus ~ label::before,
        .input-container input:not(:placeholder-shown) ~ label::before {
            content: '';
            position: absolute;
            width: 5px;
            height: 2px;
            background: black;
            top: 50%;
            left: -5px;
        }

        .button-container {
        display: flex;
        justify-content: center;
        margin-top: 10px;
        }

        button {
    width: 100%; /* Adjust width as needed */
    padding: 12px;
    background: #EFDCAB;
    color: black;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: 0.3s;
    font-size: medium;
    font-family: 'Poppins', sans-serif;  
}

button:hover {
    background-color: #404040;
    color: white;
}

    </style>
</head>
<body>
    <div class="container">

        

        <h2>Sign Up</h2>
        <form asp-action="SignUp" asp-controller="Auth" method="post">
            <div class="input-container">

                <label>First Name</label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>

            </div>
            <div class="input-container">

                <label>Last Name</label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>

            </div>
            <div class="input-container">

                <label>Email</label>
                <input asp-for="Email" type="email" />
                <span asp-validation-for="Email"></span>

            </div>

            <div class="input-container">

                <label>Phone Number</label>
                <input asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>

            </div>
            <div class="input-container">

                <label>Address</label>
                <input asp-for="Address" />
                <span asp-validation-for="Address"></span>

            </div>

            <div class="input-container">

                <label>Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password"></span>

            </div>
            <div class="button-container">
                <button type="submit">Sign Up</button>
            </div>
            <p style="color: white; margin-top: 15px; font-size: 14px;">
                Already have an account? <a href="signin.html" style="color: #1E90FF; text-decoration: none;">Sign In</a>
            </p>

        </form>
    </div>
</body>
</html>
