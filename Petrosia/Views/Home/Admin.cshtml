@using Petrosia.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Petrosia Hotel - Records</title>
    <link rel="stylesheet" href="~/css/admin-styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a href="@Url.Action("Index", "Home")">
            <img src="~/images/logo.png" alt="Hotel Logo" title="Back to Home">
        </a>
        <h1>Petrosia Hotel</h1>
    </header>
    <section class="container">
        <h2 id="recordTitle">Employee Records</h2>

        <table>
            <thead>
                <tr>
                    <th>Admin ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.AdminId</td>
                        <td>@admin.FirstName</td>
                        <td>@admin.LastName</td>
                        <td>@admin.Role</td>
                        <td>@admin.Email</td>
                        <td>@admin.PhoneNumber</td>
                        <td>
                            <form style="display:inline;" action="@Url.Action("EditAdmin", "Home")" method="get">
                                <input type="hidden" name="id" value="@admin.AdminId" />
                                <button type="submit" class="btn btn-warning">Edit</button>
                            </form>
                            <form style="display:inline;" action="@Url.Action("DeleteAdmin", "Home")" method="post">
                                <input type="hidden" name="id" value="@admin.AdminId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination-controls">
            <form class="page-control" style="display:inline;" action="@Url.Action("Guest", "Home")">
                <button class="btn" type="submit">◄ Previous</button>
            </form>
            <form class="page-control" style="display:inline;" action="@Url.Action("Guest", "Home")">
                <button class="btn" type="submit">Next ►</button>
            </form>
        </div>
    </section>
    <footer>
        © 2025 Petrosia Hotel - Privacy Policy
    </footer>
</body>
</html>