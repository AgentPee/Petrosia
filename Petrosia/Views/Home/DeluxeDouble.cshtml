        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const slides = document.querySelectorAll('.mySlides');
                let currentIndex = 0;
                let autoSlideInterval;
                const autoSlideDuration = 3000; // 3 seconds for automatic slides
                const manualTransitionDuration = 500; // 0.5 seconds for manual slides

                // Show current slide and hide others
                function showSlide(index, isManual = false) {
                    // Remove all active classes and reset transitions
                    slides.forEach(slide => {
                        slide.classList.remove('active', 'slow-transition');
                        slide.style.opacity = 0;
                    });

                    // Set appropriate transition speed
                    if (!isManual) {
                        slides[index].classList.add('slow-transition');
                    }

                    // Show new slide
                    slides[index].classList.add('active');
                    slides[index].style.opacity = 1;
                    currentIndex = index;
                }

                // Start automatic slideshow
                function startAutoSlideshow() {
                    clearInterval(autoSlideInterval);
                    autoSlideInterval = setInterval(() => {
                        const nextIndex = (currentIndex + 1) % slides.length;
                        showSlide(nextIndex);
                    }, autoSlideDuration);
                }

                // Manual navigation
                function manualSlide(direction) {
                    clearInterval(autoSlideInterval);
                    const newIndex = (currentIndex + direction + slides.length) % slides.length;
                    showSlide(newIndex, true);
                    startAutoSlideshow();
                }

                // Initialize
                showSlide(0);
                startAutoSlideshow();

                // Event listeners for arrows
                document.querySelector('.prev').addEventListener('click', () => manualSlide(-1));
                document.querySelector('.next').addEventListener('click', () => manualSlide(1));
            });
        </script>
 

